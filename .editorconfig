root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{jwmrc,xml,xslt}{,.in}]
indent_style = space
indent_size = 4

[*.shtml{,.in}]
indent_style = space
indent_size = 1

[*.{c,h}{,.in}]
indent_style = space
indent_size = 3

[Makefile{,.in}]
indent_style = tab
indent_size = tab
tab_width = 8
